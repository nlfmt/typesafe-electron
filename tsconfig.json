{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "outDir": "dist",
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "include": ["src/**/*"],
}